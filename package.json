{
  "name": "vscode-glsllint",
  "version": "0.0.6",
  "publisher": "CADENAS",
  "repository": {
    "type": "git",
    "url": "https://github.com/cadenasgmbh/vscode-glsllint"
  },
  "engines": {
    "vscode": "^1.38.0"
  },
  "license": "MIT",
  "displayName": "GLSL Lint",
  "description": "Linting of GLSL shader code",
  "categories": [
    "Programming Languages",
    "Linters"
  ],
  "keywords": [
    "GLSL",
    "Vertex shader",
    "Fragment shader",
    "OpenGL",
    "WebGL",
    "OpenGL Shading Language"
  ],
  "icon": "icon.png",
  "extensionDependencies": [
    "slevesque.shader"
  ],
  "activationEvents": [
    "onLanguage:glsl"
  ],
  "main": "./out/src/extension",
  "contributes": {
    "languages": [{
      "id": "glsl",
      "aliases": [
        "GLSL"
      ],
      "extensions": [
        ".vert",
        ".tesc",
        ".tese",
        ".geom",
        ".frag",
        ".comp",
        ".rgen",
        ".rint",
        ".rahit",
        ".rchit",
        ".rmiss",
        ".rcall",
        ".mesh",
        ".task"
      ]
    }],
    "configuration": {
      "type": "object",
      "title": "GLSL Lint configuration",
      "properties": {
        "glsllint.glslangValidatorPath": {
          "type": "string",
          "default": "",
          "description": "The path to the glslangValidator executable"
        },
        "glsllint.glslangValidatorArgs": {
          "type": "string",
          "default": "",
          "description": "Arguments for the glslangValidator executable"
        },
        "glsllint.glslifyPattern": {
          "type": "string",
          "default": "#pragma glslify:",
          "description": "Regex pattern for glslify pragma"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "test": "npm run compile && node ./node_modules/vscode/bin/test"
  },
  "devDependencies": {
    "@types/node": "^12.7.5",
    "@types/vscode": "^1.38.0",
    "prettier": "^1.18.2",
    "tslint": "^5.20.0",
    "tslint-consistent-codestyle": "^1.15.1",
    "tslint-microsoft-contrib": "^6.2.0",
    "typescript": "^3.6.3",
    "vscode-test": "^1.2.0"
  },
  "dependencies": {
    "glslify": "^7.0.0"
  }
}